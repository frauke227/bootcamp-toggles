{
  "name": "bulletinboard-ads",
  "version": "1.0.0",
  "description": "This repository contains the code / starting points that match the topics in the [material repository](https://github.tools.sap/cloud-curriculum/material).",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && tsc",
    "watch": "nodemon src/index-dev.ts",
    "start": "npm run build && node dist/src/index-dev.js",
    "start:dev": "ts-node index-dev.ts",
    "test": "mocha --recursive",
    "lint": "eslint .",
    "db:start": "./start-db.sh",
    "db:prune": "docker volume rm bb_ads_local_nodejs",
    "db:migrate:up": "ts-node migrate.ts up",
    "db:migrate:down": "ts-node migrate.ts down"
  },
  "engines": {
    "node": "16.x"
  },
  "dependencies": {
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "express": "^4.18.2",
    "node-fetch": "^3.3.0",
    "pg": "^8.9.0",
    "winston": "^3.8.2",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@types/cfenv": "^1.2.2",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.0",
    "@types/pg": "^8.6.6",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "rimraf": "^4.1.2",
    "sinon": "^15.0.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": [
      "test/**/*.test.ts"
    ],
    "node-option": [
      "experimental-loader=ts-node/esm",
      "no-warnings"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "test"
    ],
    "ext": "js,json,ts"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/eslint-recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-trailing-spaces": "warn",
      "eol-last": [
        "error",
        "always"
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2,
          "maxEOF": 1
        }
      ],
      "quotes": [
        "error",
        "single"
      ]
    },
    "ignorePatterns": [
      "dist",
      "migrations"
    ],
    "root": true
  }
}
